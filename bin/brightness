#!/bin/bash
delta=$1
if [[ "$1" == "set" ]]; then
    newValue=$2
    [[ -z $newValue  ]] && newValue=1
else
    [[ -z $delta  ]] && delta=.1
    newValue=$(echo $(xrandr --verbose | grep -m 1 -i brightness | cut -f2 -d ' ') + $delta |bc)
fi
echo $newValue
xrandr --output $(xrandr |grep primary |cut -d" " -f1) --brightness $newValue
