#!/bin/sh

if [ -x /bin/pamixer ]; then
    exec pamixer $@
fi
device="Master"
if [ "$2" = "--default-source" ]; then
    device=Capture
    shift
fi

case $1 in
    "-i")
        amixer set $device ${2:-1}+
        ;;
    "-d")
        amixer set $device ${2:-1}-
        ;;
    "-t")
        amixer set $device toggle
        ;;

esac

