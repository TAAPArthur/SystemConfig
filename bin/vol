#!/bin/sh

if [ -x /bin/pamixer ]; then
    exec pamixer $@
fi
device="Master"
if [ "$2" = "--default-source" ]; then
    device=Capture
    shift
fi

case $1 in
    -i|i)
        amixer --quiet set "$device" ${2:-1}+
        ;;
    -d|d)
        amixer --quiet set "$device" ${2:-1}-
        ;;
    -m|-t|m|t)
        amixer --quiet set "$device" toggle
        ;;
esac
notify-send -r "$device" "$(amixer get "$device")"
