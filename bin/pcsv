#!/bin/python
import sys

if __name__ == "__main__":
    delimiter = ","
    headers = []
    file = sys.stdin
    sizes = {}
    rows = []
    for line in file:
        rows.append(list(map(lambda x: x.strip(), line.split(delimiter))))
    for row in rows:
        for i in range(len(row)):
            sizes[i] = max(sizes.get(i, 0), len(row[i]))

    for row in rows:
        formatted_row = []
        for i, col in enumerate(row):
            filler = " " * (sizes[i] - len(col))
            formatted_row.append(f"{filler}{col}")
        print(f"{delimiter} ".join(formatted_row))
