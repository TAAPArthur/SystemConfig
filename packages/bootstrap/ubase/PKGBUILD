# Maintainer: Christian Hesse <arch@eworm.de>
# Contributor: Jens Staal <staal1978@gmail.com>

pkgname=ubase-git
pkgver=0.r610.g3c88778
pkgrel=1
pkgdesc='An extension of the sbase *nix core utilities - git checkout'
provides=( "util-linux" )
arch=('i686' 'x86_64')
license=('MIT')
url='http://git.suckless.org/ubase/'
makedepends=('git')
source=('git://git.suckless.org/ubase')
sha256sums=('SKIP')

build() {
	cd $srcdir/ubase/
    #add missing include
    echo "#include <sys/sysmacros.h>" >> util.h
    make
}

package() {
	cd ${srcdir}/ubase/
	make DESTDIR=${pkgdir} PREFIX=/opt MANPREFIX=/opt/man install
	install -D -m0644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
